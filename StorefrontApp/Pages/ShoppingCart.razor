@page "/shoppingcart"
@using StorefrontApp.Models
@using StorefrontApp.Services
@inject HttpClient Http
@inject ICartService cartService

<div class="row">
    <div class="col-xl-4 col-lg-6">
        @if (cartService.Cart.Any())
        {
            <h2>Your Cart</h2>
            @foreach (Product item in cartService.Cart)
            {
                <table class="table">
                    <tr>
                        <td class="align-middle">
                            <img src="/images/@item.Image" class="img-shoppingCart">
                        </td>
                        <td class="align-middle">
                            @item.ProductName - @(item.Price.ToString("C2"))
                        </td>
                        <td class="align-middle">
                            <button class="btn btn-sm align-middle"
                                    @onclick="(() => cartService.DeleteProduct(item))">
                                <span class="fa fa-trash-alt align-middle">
                                </span>
                            </button>
                        </td>
                    </tr>
                </table>
            }
